<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                           assembly="HelloNhibernate"
                           namespace="HelloNhibernate">
  <class name="Product"
           table="Products">
    <id name="ProductId">
      <generator class="identity"/>
    </id>
    <property name="ProductName" length="50" />
  </class>
</hibernate-mapping>